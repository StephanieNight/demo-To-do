@using Storage.Models
@model IEnumerable<TodoList> 

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4">Welcome to a todolist app</h1>
    <h2>Todo lists</h2>
    <p>
        <a asp-controller="List" asp-action="CreateList">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOnDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOnDate)
                    </td>
                    <td>
                        <a asp-controller="List" asp-action="EditList" asp-route-id="@item.Id">Edit</a> |
                        <a asp-controller="List" asp-action="Index" asp-route-id="@item.Id">Details</a> |
                        <a asp-controller="List" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
